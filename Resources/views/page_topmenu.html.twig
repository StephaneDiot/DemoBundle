<div class="navbar-inner">
    <div class="container">

        <a class="btn btn-navbar" data-action="toggleclass" data-class="nav-collapse" data-target=".main-navi .nav-collapse">{% trans %}Navigation{% endtrans %}</a>

        <div class="nav-collapse">
            <ul class="nav">
                {% for location in locations %}
                    {% if location.contentInfo.contentType.identifer == 'link' %}
                        <li id=""><a href="#">{{ location.contentInfo.name }}</a></li>
                    {% else %}
                        {# Temporary use system URL #}
                        <li id=""><a href="{{ path( '_ezpublishLocation', {'locationId': location.id} ) }}">{{ location.contentInfo.name }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>

    </div>
</div>
